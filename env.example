# ========================================
# Casino Scraper Configuration
# ========================================

# ========================================
# Database Configuration
# ========================================
MONGODB_URI=mongodb://127.0.0.1:27017/casino-scores
MONGODB_USER=
MONGODB_PASSWORD=

# ========================================
# Server Configuration
# ========================================
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
SUPPORT_EMAIL=support@example.com

# ========================================
# Puppeteer Configuration
# ========================================
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
CASINO_SCORES_URL=https://casinoscores.com/

# ========================================
# Scraping Configuration
# ========================================
SCRAPING_INTERVAL=0 */6 * * *  # Every 6 hours (cron format)
SCRAPING_BATCH_SIZE=10
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_RETRY_DELAY=5000

# ========================================
# Security Configuration
# ========================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ========================================
# Performance Configuration
# ========================================
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024
MAX_REQUEST_SIZE=10mb
MAX_PARAMETERS=1000

# ========================================
# Monitoring Configuration
# ========================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# ========================================
# External APIs (if needed)
# ========================================
EXTERNAL_API_KEY=
EXTERNAL_API_URL=

# ========================================
# Email Configuration (for notifications)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@example.com

# ========================================
# Redis Configuration (for caching/sessions)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# File Upload Configuration
# ========================================
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ========================================
# Development Configuration
# ========================================
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true

# ========================================
# Production Configuration
# ========================================
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=
TRUST_PROXY=true

# ========================================
# Backup Configuration
# ========================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30
